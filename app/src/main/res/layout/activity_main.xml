<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity">


        <RelativeLayout
            android:layout_marginBottom="@dimen/_50sdp"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toTopOf="@+id/bottomBar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <View android:layout_width="match_parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="1dp"
            android:background="@color/tab_color_unselected"
            app:layout_constraintBottom_toTopOf="@id/bottomBar"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:weightSum="4"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_marginTop="@dimen/_3sdp"
                    android:drawablePadding="-5dp"
                    android:textColor="@color/tab_color_unselected"
                    android:drawableTop="@drawable/ic_home"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/customerBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/customers"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="@dimen/_9sdp"
                    />

                <TextView
                    android:layout_marginTop="@dimen/_3sdp"
                    android:drawablePadding="-5dp"
                    android:textColor="@color/tab_color_unselected"
                    android:drawableTop="@drawable/ic_store"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/storeBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/organ"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="@dimen/_9sdp"
                    />

                <TextView
                    android:layout_marginTop="@dimen/_3sdp"
                    android:drawablePadding="-5dp"
                    android:textColor="@color/tab_color_unselected"
                    android:drawableTop="@drawable/ic_order"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/ordersBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/orders"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="@dimen/_9sdp"
                    />


                <TextView
                    android:layout_marginTop="@dimen/_3sdp"
                    android:drawablePadding="-5dp"
                    android:textColor="@color/tab_color_unselected"
                    android:drawableTop="@drawable/ic_card"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/productBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/products"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="@dimen/_9sdp"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>